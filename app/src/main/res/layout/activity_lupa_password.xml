<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.lupa_password.LupaPasswordActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_lupa_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_lupa_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Lupa Password"
            app:titleTextColor="@color/black"
            android:elevation="0dp"/>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_email_lupa_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:hintEnabled="false"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/appbar_lupa_password">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_email_lupa_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_edit_text"
            android:hint="@string/email"
            android:paddingStart="20dp"
            android:paddingEnd="16dp"
            android:inputType="textEmailAddress"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_lupa_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lupa_password"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/ti_email_lupa_password"/>

</androidx.constraintlayout.widget.ConstraintLayout>